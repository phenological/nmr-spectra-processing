year <- sub("-.*", "", format.Date(Sys.Date(), "%Y"))
note <- sprintf("R package version %s", packageVersion("nmr.spectra.processing"))

bibentry(bibtype = "Misc",
         key = "nmrSpectraProcessing",
         title = "nmr-spectra-processing: what is needing to prepare NMR datasets",
         author = c(person("Julien", "Wist"), person("Andres", "Bernal"), person("Andres M.", "Castillo")),
         year = year,
         note = note,
         url = "https://github.com/phenological/nmr-spectra-processing")
